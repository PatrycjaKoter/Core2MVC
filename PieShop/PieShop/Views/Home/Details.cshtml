@model Pie

<div class="thumbnail">
    <div class="caption">
        <img src="@Model.ImageUrl" alt="@Model.Name"/>
        <div class="caption-full">
            <h3>
                @Model.Name
            </h3>
            <h4>@Model.ShortDescription</h4>
            <p>
                @Model.LongDescription
            </p>
            <h3 style="text-align:right;">Price: @Model.Price.ToString("c")</h3>

        </div>
    </div>
</div>



